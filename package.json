{
  "name": "blog-editor",
  "version": "1.0.0",
  "description": "sawa-zen.comの記事投稿ページ",
  "main": "index.js",
  "scripts": {
    "start": "npm run lite & npm run watch",
    "lite": "lite-server",
    "build": "npm run build:sass & npm run build:js",
    "build:js": "browserify src/js/App.js -t babelify --outfile public/js/bundle.js",
    "build:sass": "node-sass src/sass --output public/css",
    "watch": "npm run watch:sass & npm run watch:js",
    "watch:js": "watchify src/js/App.js -t babelify --outfile public/js/bundle.js -d",
    "watch:sass": "node-sass src/sass --output public/css -w",
    "test": "jest src/js/",
    "postinstall": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sawa-zen/sawa-zen.com.git"
  },
  "author": "Takayoshi Sawada",
  "homepage": "sawa-zen.com",
  "devDependencies": {
    "babel": "^6.3.26",
    "babel-cli": "^6.22.2",
    "babel-plugin-transform-react-jsx": "^6.22.0",
    "babel-preset-es2015": "^6.22.0",
    "babelify": "^7.2.0",
    "brace": "^0.9.1",
    "browserify": "^11.0.0",
    "classnames": "^2.2.5",
    "enzyme": "^2.7.1",
    "highlight.js": "^9.9.0",
    "jest": "^16.0.2",
    "lite-server": "^2.2.2",
    "lodash": "^4.17.4",
    "marked": "^0.3.6",
    "moment": "^2.17.1",
    "mousetrap": "^1.6.0",
    "node-sass": "^3.13.1",
    "notie": "^3.9.5",
    "nprogress": "^0.2.0",
    "react": "^15.4.2",
    "react-ace": "^4.1.1",
    "react-addons-test-utils": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-html-parser": "^1.0.3",
    "split.js": "^1.2.0",
    "superagent": "^2.3.0",
    "watchify": "^3.9.0"
  }
}
